<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:component-scan base-package="com.test.country" />

	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix">
			<value>/WEB-INF/views/jsp/</value>
		</property>
		<property name="suffix">
			<value>.jsp</value>
		</property>
	</bean>

	
<!-- 	<bean id="countryService" class="com.test.country.service.CountryService">
		<property name="countryCardCollection" value-ref="countryCardCollectionBean"/>		
	</bean> -->
	
	<bean id="countryCardCollection" class="com.test.country.model.CountryCardCollection">

		<property name="countryCardCollection">
			<map>
				<!-- 
				<entry key="Albania" value-ref="AlbaniaCards" /> 
				<entry key="American Samoa" value-ref="AmericanSamoaCards" /> 
				-->
				<entry key="Albania">
					<list>
						<bean class="com.test.country.model.CountryCard">
							<property name="country" value="Albania" />
							<property name="dialType" value="Free Call" />
							<property name="callType" value="Dial Access Code" />
							<property name="phoneNumber" value="00 800 0010" />
							<property name="instructionType"
								value="Allow several seconds to connect, When prompted, enter" />
							<property name="dialNumber" value="800 544 0275" />
						</bean>
						<!-- Test Card -->
						<bean class="com.test.country.model.CountryCard">
							<property name="country" value="Albania" />
							<property name="dialType" value="Free Call" />
							<property name="callType" value="Dial Access Code" />
							<property name="phoneNumber" value="00 800 0011" />
							<property name="instructionType"
								value="Allow several seconds to connect, When prompted, enter" />
							<property name="dialNumber" value="800 544 0275" />
						</bean>
					</list>
				</entry>
				<entry key="American Samoa">
					<list>
						<bean class="com.test.country.model.CountryCard">
							<property name="country" value="American Samoa" />
							<property name="dialType" value="Free Call" />
							<property name="callType" value="Dial Access Code" />
							<property name="phoneNumber" value="1 800 225 5288" />
							<property name="instructionType"
								value="Allow several seconds to connect, When prompted, enter" />
							<property name="dialNumber" value="800 544 0275" />
						</bean>
						<!-- Test Card -->
						<bean class="com.test.country.model.CountryCard">
							<property name="country" value="American Samoa" />
							<property name="dialType" value="Free Call" />
							<property name="callType" value="Dial Access Code" />
							<property name="phoneNumber" value="1 800 225 5288" />
							<property name="instructionType"
								value="Allow several seconds to connect, When prompted, enter" />
							<property name="dialNumber" value="800 544 0275" />
						</bean>
					</list>
				</entry>
			</map>
		</property>

	</bean>
	
	<mvc:resources mapping="/resources/**" location="/resources/" />
 
	<mvc:annotation-driven />
	
	
	
</beans>